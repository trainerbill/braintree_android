<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.braintreepayments.demo" >

    <application android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DemoAppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OptionsActivity" android:label="Options" />
        <activity android:name=".CustomFormActivity" android:label="Buy" />
        <activity android:name=".FinishedActivity" android:label="Purchase Complete" />
        <activity android:name=".CreditCardOnlyActivity" android:label="Buy With Credit Card" />
        <activity android:name=".PayPalCustomActivity" android:label="Pay with Custom PayPal" />
    </application>
</manifest>
